@using Web.Models.Reservations
@model Web.Models.Reservations.ReservationsIndexViewModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<h4>Reservations</h4>
<table class="table">
    <thead>
        <tr>
            <th>
                Reservation Id
            </th>
            <th>
                Plane Number
            </th>
            <th>
                First Name
            </th>
            <th>
                Surname
            </th>
            <th>
                LastName
            </th>
            <th>
                Email
            </th>
            <th>
                EGN
            </th>
            <th>
                Address
            </th>
            <th>
                Phone Number
            </th>
            <th>
                Nationality
            </th>
            <th>
                Ticket type
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (ReservationsViewModel item in Model.Items)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ReservationId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PlaneNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Surname)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EGN)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Address)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PhoneNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Nationality)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TicketType)
                </td>
                <td>
                    <a asp-action="Create" asp-route-id="@item.ReservationId">Reserve</a> 
                </td>
            </tr>
        }
    </tbody>
    <ul class="pagination">
        @for (var i = 1; i <= Model.Pager.PagesCount; i++)
        {
            <li class="page-item @(i == Model.Pager.CurrentPage ? "active" : "")">
                <a asp-route-Pager.CurrentPage="@i" class="page-link">@i</a>
            </li>
        }
    </ul>
</table>
